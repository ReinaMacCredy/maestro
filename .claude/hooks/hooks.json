{
  "description": "Maestro workflow hooks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          { "type": "command", "command": "./.claude/scripts/orchestrator-guard.sh" },
          { "type": "command", "command": "./.claude/scripts/plan-protection.sh" }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          { "type": "command", "command": "./.claude/scripts/verification-injector.sh" }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          { "type": "command", "command": "./.claude/scripts/plan-validator.sh" }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          { "type": "command", "command": "./.claude/scripts/wisdom-injector.sh" }
        ]
      }
    ]
  }
}
